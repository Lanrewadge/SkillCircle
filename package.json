{
  "name": "skill-circle",
  "version": "1.0.0",
  "description": "A skill-sharing platform that connects learners with local teachers",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "backend",
    "shared"
  ],
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:backend\"",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "cd shared && npm run build",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules && npm run clean --workspaces",
    "db:reset": "cd backend && npm run db:reset",
    "db:seed": "cd backend && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}