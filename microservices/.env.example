# Environment Configuration
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-must-be-at-least-32-characters
JWT_EXPIRES_IN=1h

# Database Configuration
# PostgreSQL (User Service & Learning Service)
POSTGRES_DB=skill_circle
POSTGRES_USER=skill_circle_user
POSTGRES_PASSWORD=skill_circle_password
DATABASE_URL_USERS=postgresql://skill_circle_user:user_password@localhost:5432/skill_circle_users
DATABASE_URL_LEARNING=postgresql://skill_circle_learning:learning_password@localhost:5432/skill_circle_learning

# MongoDB (Skills Service & Content Service)
MONGODB_URI_SKILLS=mongodb://admin:admin_password@localhost:27017/skill_circle_skills?authSource=admin
MONGODB_URI_CONTENT=mongodb://admin:admin_password@localhost:27017/skill_circle_content?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service Discovery (Consul)
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Skill Circle <noreply@skillcircle.com>"

# Service URLs (Internal)
USER_SERVICE_URL=http://localhost:3001
SKILLS_SERVICE_URL=http://localhost:3002
LEARNING_SERVICE_URL=http://localhost:3003
CONTENT_SERVICE_URL=http://localhost:3004
VISUALIZATION_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# External URLs
FRONTEND_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800

# WebSocket Configuration
WEBSOCKET_PORT=3007

# Monitoring
HEALTH_CHECK_INTERVAL=30
SERVICE_TIMEOUT=30000

# Development Settings
HOT_RELOAD=true
DEBUG_MODE=true

# Production Settings (Override in production)
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Cloud Configuration (Optional)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=skill-circle-uploads

# Monitoring & Analytics (Optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id
# MIXPANEL_TOKEN=your-mixpanel-token